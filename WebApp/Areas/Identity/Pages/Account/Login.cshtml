@page
@model LoginModel

@section Styles {
    <link rel="stylesheet" href="~/css/pages/login.css" asp-append-version="true" />
}

@{
    ViewData["Title"] = "Logga in";
}

<div class="login-page">
    <div class="login-card">
        <div class="login-left">
            <h1 class="login-title">Logga in</h1>
            <p class="login-subtitle">
                Logga in för att hantera ditt CV, kontakta andra och använda privata meddelanden.
            </p>

            <form id="account" method="post" class="login-form" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <label asp-for="Input.Email">Användarnamn</label>
                <input asp-for="Input.Email" autocomplete="username" placeholder="namn@exempel.se" />

                <label asp-for="Input.Password">Lösenord</label>
                <input
                    asp-for="Input.Password"
                    type="password"
                    autocomplete="current-password"
                    placeholder="••••••••" />

                <div class="login-actions">
                    <button class="btn-primary-custom" id="login-submit" type="submit">Logga in</button>

                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="signup-link">Bli medlem</a>
                </div>

                <div class="login-actions" style="margin-top: 10px; justify-content: flex-start;">
                    <label class="remember-me" style="display: flex; gap: 10px; align-items: center; font-weight: 650;">
                        <input asp-for="Input.RememberMe" style="width: auto;" />
                        <span>Kom ihåg mig</span>
                    </label>
                </div>
            </form>
        </div>

        <div class="login-right">
            <div class="login-illustration-wrap">
                <img
                    src="~/images/viewimages/login.png"
                    alt="Login illustration"
                    class="login-illustration" />
            </div>
        </div>
    </div>
</div>
