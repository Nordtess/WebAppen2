@{
    string Active(string controller)
    {
        var current = ViewContext.RouteData.Values["controller"]?.ToString();
        return string.Equals(current, controller, StringComparison.OrdinalIgnoreCase) ? "active" : "";
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">

    @RenderSection("Styles", required: false)
</head>

<body class="nl-body">
    <header>
        <nav class="navbar nl-navbar" role="navigation" aria-label="Huvudnavigation">
            <div class="container-fluid nl-shell">

                <!-- LEFT: LOGO (INTE länk) -->
                <div class="nl-brand" aria-label="NotLinkedIn logo">
                    <img class="nl-logo"
                         src="~/images/logos/loggamini.png"
                         asp-append-version="true"
                         alt="NotLinkedIn" />
                </div>

                <!-- CENTER: länkar -->
                <div class="nl-center-col" aria-label="Primär navigation">
                    <div class="nl-center-wrap">
                        <ul class="navbar-nav flex-row nl-nav-center">
                            <li class="nav-item">
                                <a class="nav-link nl-link @Active("Home")" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nl-link @Active("Login")" asp-controller="Login" asp-action="Index">Logga in</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nl-link @Active("NewUser")" asp-controller="NewUser" asp-action="Index">Bli medlem</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- RIGHT -->
                <div class="nl-right" aria-label="Användarområde">

                    <!-- User section (burger + email) -->
                    <div class="nl-user">
                        <div class="nl-account">
                            <button class="nl-burger" type="button"
                                    aria-label="Öppna meny" aria-expanded="false" aria-controls="user-menu">
                                <span></span>
                                <span></span>
                                <span></span>
                            </button>

                            <div class="nl-menu-panel" id="user-menu" aria-hidden="true" role="menu">
                                <a class="nl-menu-item" asp-controller="MyCV" asp-action="Index" role="menuitem">Mitt CV</a>
                                <a class="nl-menu-item" asp-controller="Messages" asp-action="Index" role="menuitem">Mina meddelanden</a>
                            </div>
                        </div>

                        <span class="nl-user-email" title="jamie@example.se">jamie@example.se</span>
                    </div>

                    <!-- Mail notification (med era bilder) -->
                    <div class="nl-mail"
                         data-unread="3"
                         data-closed-src="@Url.Content("~/images/bannersandicons/mail.png")"
                         data-open-src="@Url.Content("~/images/bannersandicons/mailopen.png")"
                         title="Meddelanden">
                        <img class="nl-mail-img"
                             src="~/images/bannersandicons/mail.png"
                             asp-append-version="true"
                             alt="Meddelanden" />
                        <span class="nl-mail-text">
                            Du har <strong class="nl-unread-count">3</strong> olästa meddelanden
                        </span>
                    </div>

                </div>

            </div>
        </nav>
    </header>

    <main class="nl-main container" role="main">
        @RenderBody()
    </main>

    <footer class="nl-footer border-top text-muted" role="contentinfo">
        <div class="container">
            &copy; 2025 - WebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
