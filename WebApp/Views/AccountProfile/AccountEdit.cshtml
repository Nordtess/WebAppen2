@model WebApp.Models.AccountEditViewModel

@section Styles {
    <link rel="stylesheet" href="~/css/pages/newuser.css" asp-append-version="true" />
}

@{
    ViewData["Title"] = "Ändra uppgifter";
}

<div class="register-page">
    <div class="register-card">

        <div class="register-left">
            <h1 class="register-title">Ändra uppgifter</h1>

            <div class="register-benefits">
                <div class="benefit-item">
                    <span class="benefit-emoji">??</span>
                    <span class="benefit-text">Uppdatera dina grunduppgifter</span>
                </div>
                <div class="benefit-item">
                    <span class="benefit-emoji">??</span>
                    <span class="benefit-text">Behövs för privata profiler och meddelanden</span>
                </div>
            </div>

            <form asp-controller="AccountProfile" asp-action="Edit" method="post" class="register-form">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <label asp-for="FirstName">Förnamn</label>
                <input asp-for="FirstName" autocomplete="given-name" placeholder="Förnamn" />
                <span asp-validation-for="FirstName" class="text-danger"></span>

                <label asp-for="LastName">Efternamn</label>
                <input asp-for="LastName" autocomplete="family-name" placeholder="Efternamn" />
                <span asp-validation-for="LastName" class="text-danger"></span>

                <label asp-for="PhoneNumberDisplay">Telefonnummer</label>
                <input asp-for="PhoneNumberDisplay" autocomplete="tel" placeholder="070-1234567" />
                <span asp-validation-for="PhoneNumberDisplay" class="text-danger"></span>

                <label asp-for="City">Stad</label>
                <input asp-for="City" autocomplete="address-level2" placeholder="Örebro" />
                <span asp-validation-for="City" class="text-danger"></span>

                <label asp-for="PostalCode">Postnummer</label>
                <input asp-for="PostalCode" inputmode="numeric" autocomplete="postal-code" placeholder="71412" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>

                <div class="register-actions" style="margin-top: 10px;">
                    <a class="btn-secondary-custom" asp-controller="AccountProfile" asp-action="Index">Ångra</a>
                    <button type="submit" class="btn-primary-custom">Bekräfta</button>
                </div>
            </form>
        </div>

        <div class="register-right">
            <div class="register-illustration-wrap">
                <img src="~/images/viewimages/register.png"
                     alt="Illustration"
                     class="register-illustration" />
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
