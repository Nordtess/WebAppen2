@model WebApp.Domain.Identity.ApplicationUser

@section Styles {
    <link rel="stylesheet" href="~/css/pages/account-profile.css" asp-append-version="true" />
}

@{
    ViewData["Title"] = "Mitt konto";
}

<div class="account-page">

    <div class="account-banner" aria-label="Kontobanner">
        <img src="~/images/bannersandicons/mycv3.png"
             alt="Banner"
             class="account-banner-img" />
    </div>

    <section class="account-card" aria-label="Kontokort">
        <div class="account-card-inner">
            <h1 class="account-title">Mitt konto</h1>

            <div class="account-benefits">
                <div class="account-benefit">Här ser du dina kontouppgifter</div>
                <div class="account-benefit">Du kan ändra uppgifter och byta lösenord</div>
            </div>

            <div class="account-info" aria-label="Kontouppgifter">
                <div class="account-row"><div class="account-label">E-post:</div><div class="account-value">@Model.Email</div></div>
                <div class="account-row"><div class="account-label">Förnamn:</div><div class="account-value">@Model.FirstName</div></div>
                <div class="account-row"><div class="account-label">Efternamn:</div><div class="account-value">@Model.LastName</div></div>
                <div class="account-row"><div class="account-label">Telefonnummer:</div><div class="account-value">@Model.PhoneNumberDisplay</div></div>
                <div class="account-row"><div class="account-label">Stad:</div><div class="account-value">@Model.City</div></div>
                <div class="account-row"><div class="account-label">Postnummer:</div><div class="account-value">@Model.PostalCode</div></div>
            </div>

            <div class="account-actions" aria-label="Åtgärder">
                <a class="btn-primary-custom" asp-controller="AccountProfile" asp-action="Edit">Ändra uppgifter</a>
                <a class="btn-secondary-custom" asp-controller="AccountProfile" asp-action="ChangePassword">Byt lösenord</a>
                <a class="btn-primary-custom" asp-controller="AccountProfile" asp-action="Deactivate">Deaktivera konto</a>
            </div>
        </div>
    </section>
</div>
