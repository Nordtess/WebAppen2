@model WebApp.Domain.Identity.ApplicationUser

@section Styles {
    <link rel="stylesheet" href="~/css/pages/newuser.css" asp-append-version="true" />
}

@{
    ViewData["Title"] = "Mitt konto";
}

<div class="register-page">
    <div class="register-card">

        <div class="register-left">
            <h1 class="register-title">Mitt konto</h1>

            <div class="register-benefits">
                <div class="benefit-item">
                    <span class="benefit-emoji">??</span>
                    <span class="benefit-text">Här ser du dina kontouppgifter</span>
                </div>
                <div class="benefit-item">
                    <span class="benefit-emoji">??</span>
                    <span class="benefit-text">Du kan ändra uppgifter och byta lösenord</span>
                </div>
            </div>

            <div class="register-form" style="display:grid; gap: 10px;">
                <div><strong>E-post:</strong> @Model.Email</div>
                <div><strong>Förnamn:</strong> @Model.FirstName</div>
                <div><strong>Efternamn:</strong> @Model.LastName</div>
                <div><strong>Telefonnummer:</strong> @Model.PhoneNumberDisplay</div>
                <div><strong>Stad:</strong> @Model.City</div>
                <div><strong>Postnummer:</strong> @Model.PostalCode</div>

                <div class="register-actions" style="margin-top: 10px; gap: 10px; flex-wrap: wrap;">
                    <a class="btn-primary-custom" asp-controller="AccountProfile" asp-action="Edit">Ändra uppgifter</a>
                    <a class="btn-secondary-custom" asp-controller="AccountProfile" asp-action="ChangePassword">Byt lösenord</a>
                    <a class="btn-primary-custom" asp-controller="AccountProfile" asp-action="Deactivate">Deaktivera konto</a>
                </div>
            </div>
        </div>

        <div class="register-right">
            <div class="register-illustration-wrap">
                <img src="~/images/viewimages/register.png"
                     alt="Illustration"
                     class="register-illustration" />
            </div>
        </div>

    </div>
</div>
