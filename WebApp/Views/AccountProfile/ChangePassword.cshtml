@model WebApp.Models.ChangePasswordViewModel

@section Styles {
    <link rel="stylesheet" href="~/css/pages/newuser.css" asp-append-version="true" />
}

@{
    ViewData["Title"] = "Byt lösenord";
}

<div class="register-page">
    <div class="register-card">

        <div class="register-left">
            <h1 class="register-title">Byt lösenord</h1>

            <div class="register-benefits">
                <div class="benefit-item">
                    <span class="benefit-emoji">??</span>
                    <span class="benefit-text">Välj ett starkt lösenord</span>
                </div>
                <div class="benefit-item">
                    <span class="benefit-emoji">?</span>
                    <span class="benefit-text">Bekräfta för att spara</span>
                </div>
            </div>

            <form asp-controller="AccountProfile" asp-action="ChangePassword" method="post" class="register-form">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <label asp-for="CurrentPassword">Nuvarande lösenord</label>
                <input asp-for="CurrentPassword" type="password" autocomplete="current-password" placeholder="••••••••" />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>

                <label asp-for="NewPassword">Nytt lösenord</label>
                <input asp-for="NewPassword" type="password" autocomplete="new-password" placeholder="••••••••" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>

                <label asp-for="ConfirmPassword">Bekräfta lösenord</label>
                <input asp-for="ConfirmPassword" type="password" autocomplete="new-password" placeholder="••••••••" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                <div class="register-actions" style="margin-top: 10px;">
                    <a class="btn-secondary-custom" asp-controller="AccountProfile" asp-action="Index">Ångra</a>
                    <button type="submit" class="btn-primary-custom">Bekräfta</button>
                </div>
            </form>
        </div>

        <div class="register-right">
            <div class="register-illustration-wrap">
                <img src="~/images/viewimages/register.png"
                     alt="Illustration"
                     class="register-illustration" />
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
