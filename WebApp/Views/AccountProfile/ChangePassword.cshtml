@model WebApp.Models.ChangePasswordViewModel

@section Styles {
    <link rel="stylesheet" href="~/css/pages/account-profile.css" asp-append-version="true" />
}

@{
    ViewData["Title"] = "Byt lösenord";
}

<div class="account-page">

    <div class="account-banner" aria-label="Kontobanner">
        <img src="~/images/bannersandicons/mycv3.png"
             alt="Banner"
             class="account-banner-img" />
    </div>

    <section class="account-card" aria-label="Byt lösenord">
        <div class="account-card-inner">
            <h1 class="account-title">Byt lösenord</h1>

            <div class="account-benefits">
                <div class="account-benefit">Välj ett starkt lösenord</div>
                <div class="account-benefit">Bekräfta för att spara</div>
            </div>

            <form asp-controller="AccountProfile" asp-action="ChangePassword" method="post" class="account-form">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <label asp-for="CurrentPassword">Nuvarande lösenord</label>
                <input asp-for="CurrentPassword" type="password" autocomplete="current-password" placeholder="••••••••" />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>

                <label asp-for="NewPassword">Nytt lösenord</label>
                <input asp-for="NewPassword" type="password" autocomplete="new-password" placeholder="••••••••" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>

                <label asp-for="ConfirmPassword">Bekräfta lösenord</label>
                <input asp-for="ConfirmPassword" type="password" autocomplete="new-password" placeholder="••••••••" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                <div class="account-actions">
                    <a class="btn-secondary-custom" asp-controller="AccountProfile" asp-action="Index">Ångra</a>
                    <button type="submit" class="btn-primary-custom">Bekräfta</button>
                </div>
            </form>
        </div>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
