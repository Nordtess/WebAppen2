@section Styles {
    <link rel="stylesheet" href="~/css/pages/login.css" asp-append-version="true" />
}

@{
    ViewData["Title"] = "Logga in";
}

<div class="login-page">
    <div class="login-card">

        
        <div class="login-left">
            <h1 class="login-title">Logga in</h1>
            <p class="login-subtitle">
                Logga in för att hantera ditt CV, kontakta andra och använda privata meddelanden.
            </p>

            <form method="post" class="login-form">
                <label for="username">Användarnamn</label>
                <input type="text" id="username" name="Username" placeholder="Användarnamn" />

                <label for="password">Lösenord</label>
                <input type="password" id="password" name="Password" placeholder="••••••••" />

                <div class="login-actions">
                    <button class="btn-primary-custom" type="submit">
                        Logga in
                    </button>

                    <a asp-controller="NewUser" asp-action="Index" class="signup-link">
                        Bli medlem
                    </a>
                </div>
            </form>
        </div>

        
        <div class="login-right">
            <div class="login-illustration-wrap">
                <img src="~/images/viewimages/login.png"
                     alt="Login illustration"
                     class="login-illustration" />
            </div>
        </div>

    </div>
</div>
